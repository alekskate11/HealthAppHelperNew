<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:id="@+id/profile_iv_participants"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/usernameChatTv_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:tint="@android:color/white"
        android:text="Username"
        android:fontFamily="sans-serif"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toEndOf="@+id/profile_iv_participants"
      />

    <TextView
        android:id="@+id/statusChatTv_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif"
        android:text="Status"
        android:textSize="16sp"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/usernameChatTv_participants"
        app:layout_constraintStart_toStartOf="@+id/usernameChatTv_participants"
        app:layout_constraintEnd_toEndOf="@+id/usernameChatTv_participants"/>



</androidx.constraintlayout.widget.ConstraintLayout>
